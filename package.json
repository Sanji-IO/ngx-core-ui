{
  "name": "@sanji/ngx-core-ui",
  "version": "0.0.0-development",
  "scripts": {
    "commitmsg": "validate-commit-msg",
    "commit": "git-cz",
    "docs": "npm run docs:build",
    "docs:build": "compodoc -p tsconfig.json -n test -d docs --hideGenerator",
    "docs:serve": "npm run docs:build -- -s",
    "docs:watch": "npm run docs:build -- -s -w",
    "ng": "ng",
    "lint": "tslint --project lib/src/tsconfig.es5.json lib/src/**/*.ts",
    "start": "ng serve",
    "build": "ng-packagr -p ng-package.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --runInBand",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "keywords": [
    "angular",
    "angular module",
    "sanji",
    "core"
  ],
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Sanji-IO/ngx-core-ui"
  },
  "bugs": {
    "url": "https://github.com/Sanji-IO/ngx-core-ui/issues"
  },
  "author": {
    "name": "Zack Yang",
    "email": "zack9433@gmail.com"
  },
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">= 8",
    "npm": ">= 5"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "lib/src/tsconfig.spec.json"
      },
      "__TRANSFORM_HTML__": true
    },
    "setupTestFrameworkScriptFile": "<rootDir>/lib/src/jest.ts",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "jest.ts",
      "jest-global-mocks.ts",
      "package.json"
    ]
  },
  "dependencies": {
    "@angular/animations": "^5.1.0",
    "@angular/cdk": "^5.0.1",
    "@angular/common": "^5.1.0",
    "@angular/core": "^5.1.0",
    "@angular/flex-layout": "^2.0.0-rc.1",
    "@angular/forms": "^5.1.0",
    "@angular/http": "^5.1.0",
    "@angular/material": "^5.0.1",
    "@angular/platform-browser": "^5.1.0",
    "@angular/platform-browser-dynamic": "^5.1.0",
    "@angular/router": "^5.1.0",
    "@auth0/angular-jwt": "^1.0.0-beta.9",
    "@ngrx/effects": "^4.1.1",
    "@ngrx/router-store": "^4.1.1",
    "@ngrx/store": "^4.1.1",
    "@ngrx/store-devtools": "^4.1.1",
    "core-js": "^2.5.3",
    "hammerjs": "^2.0.8",
    "ngx-permissions": "^3.0.0",
    "ngx-toastr": "^8.0.0",
    "ngx-webstorage": "^2.0.0",
    "rxjs": "^5.5.5",
    "stacktrace-js": "^2.0.0",
    "zone.js": "^0.8.18"
  },
  "devDependencies": {
    "@angular/cli": "1.6.1",
    "@angular/compiler": "^5.1.0",
    "@angular/compiler-cli": "^5.1.0",
    "@angular/language-service": "^5.1.0",
    "@compodoc/compodoc": "^1.0.5",
    "@types/jest": "^21.1.8",
    "@types/node": "^8.5.1",
    "@types/stacktrace-js": "^0.0.32",
    "codelyzer": "^4.0.2",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "jest-preset-angular": "^4.0.2",
    "ng-packagr": "^2.0.0-rc.7",
    "ts-node": "~4.0.2",
    "tslint": "~5.8.0",
    "typescript": "~2.4.2",
    "validate-commit-msg": "^2.14.0",
    "semantic-release": "^8.2.0"
  }
}
